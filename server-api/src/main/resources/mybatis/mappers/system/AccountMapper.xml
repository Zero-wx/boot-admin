<!--        FROM t_sys_account-->
<!--        where id = #{id}-->
<!--    </delete>-->
    <!-- 更新 -->
    <update id="updateUser">

    </update>
    <!-- 查询 -->
    <select id="findByAccount" resultType="com.zero.serverApi.bean.entity.system.Account">
        select *
        from t_sys_account
        where username = #{userName}
    </select>
</mapper>